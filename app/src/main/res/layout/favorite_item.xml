<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_favorite_poster"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_favorite_description"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:text="description"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_rating_label"
        app:layout_constraintLeft_toRightOf="@+id/iv_favorite_poster"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_favorite_release_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_favorite_poster"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_favorite_rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_average_votes"
        app:layout_constraintLeft_toRightOf="@+id/iv_favorite_poster"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_release_date_label" />

    <TextView
        android:id="@+id/tv_favorite_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_release_date"
        app:layout_constraintLeft_toRightOf="@+id/tv_favorite_rating_label"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_favorite_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/tv_favorite_release_date_label"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_title" />

    <TextView
        android:id="@+id/tv_favorite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        style="@style/sectionHeadings"
        app:layout_constraintLeft_toRightOf="@+id/iv_favorite_poster"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />
</android.support.constraint.ConstraintLayout>